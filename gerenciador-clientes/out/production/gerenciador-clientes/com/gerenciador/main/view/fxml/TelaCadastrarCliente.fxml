            <TextField promptText="email" fx:id="inputEmail"/>
        </TilePane>

        <TilePane styleClass="line">
            <TextField promptText="rua" fx:id="inputRua"/>
            <TextField promptText="bairro" fx:id="inputBairro"/>
            <TextField promptText="número" fx:id="inputNumero"/>
        </TilePane>

        <TilePane styleClass="line">
            <TextField promptText="cidade" fx:id="inputCidade"/>
            <TextField promptText="UF" fx:id="inputEstado"/>
        </TilePane>
        <HBox styleClass="text-area">
            <TextArea promptText="observação" fx:id="inputObservacao" HBox.hgrow="ALWAYS"/>
        </HBox>

    </VBox>

